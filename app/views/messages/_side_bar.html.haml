.chatside-bar
  .side-header
    .side-header__box
      %p.side-header__box-username
        = current_user.name
      %ul.side-header__box-menu
        %li.side-header__box-exit-user
        = link_to new_group_path do
          =icon('fas', 'edit', class: 'icon')
          
        %li.side-header__box-new-group
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon')
  .side-groups
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        %p.side-groups__group-namebox
          = group.name
        %p.side-groups__group-messagebox
          = group.show_last_message